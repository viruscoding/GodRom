<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".ui.addpackage.RomLogFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollview"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/txtDexClassName"
                style="@style/FormMargin"
                android:gravity="top|left"
                android:hint="dex中实现接口的类名"
                android:minHeight="45dp"
                android:textSize="18sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSelectDex"
                    android:text="添加注入dex"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="5dp"/>
                <Button
                    android:id="@+id/btnClearDex"
                    android:text="清空列表"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtDexPath"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1.0"
                    android:hint="注入的dex列表" />
            </LinearLayout>
            <Switch
                android:id="@+id/swInjectDobby"
                style="@style/FormMargin"
                android:text="注入内置Dobby"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSelectSo"
                    android:text="添加要注入的so"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="5dp"/>
                <Button
                    android:id="@+id/btnClearSo"
                    android:text="清空列表"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtSoPath"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1.0"
                    android:hint="注入的so列表" />
            </LinearLayout>




        </LinearLayout>
    </ScrollView>

</FrameLayout>